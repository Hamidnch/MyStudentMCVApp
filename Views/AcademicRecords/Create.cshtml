
@model lab4.DataAccess.AcademicRecord

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AcademicRecord</h4>
<hr />

    @if (ViewBag.DuplicateRecord != null)
    {
        <div class="alert alert-danger">
            @ViewBag.DuplicateRecord
        </div>
    }

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-control">
                <label asp-for="CourseCode" class="form-label"></label>
                <select asp-for="CourseCode" class ="form-control" asp-items="ViewBag.CourseCode"></select>
            </div>
            <div class="form-control">
                <label asp-for="StudentId" class="form-label"></label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-control">
                <label asp-for="Grade" class="form-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-control">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
